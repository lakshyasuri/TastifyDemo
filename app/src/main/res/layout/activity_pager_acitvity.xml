    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="20dp"

        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/triple_button_left"
            android:text="track"
            android:id="@+id/triple_button1"
            android:gravity="center"
            android:drawableRight="@drawable/target"
            android:paddingRight="10dp"
            android:fontFamily="@font/autour_one"

            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/triple_button2"
            android:drawableRight="@drawable/support"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="support"
            android:background="@drawable/triple_button_middle"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/triple_button3"
            android:paddingRight="10dp"
            android:gravity="center"
            android:drawableRight="@drawable/cancel"
            android:text="cancel"
            android:background="@drawable/triple_button_right"
            />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:id="@+id/tabLayout"
        app:tabSelectedTextColor="@android:color/black"
        app:tabIndicatorColor="@android:color/white"
        tools:background="@android:color/holo_blue_bright"
        app:tabMaxWidth="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabBackground="@android:color/white"
        android:background="@android:color/white"
        >
    </android.support.design.widget.TabLayout>

    <View
