<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools"
    >




        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/custom_tab_image"
            tools:src="@drawable/source_icon"
            />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        tools:src="@drawable/ok"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/custom_tab_tick"


        />


        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:id="@+id/custom_tab_indicator"
            android:layout_below="@id/custom_tab_image"
            tools:background="@color/unselected_tab"

            />



        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="@string/source"
            android:layout_below="@+id/custom_tab_indicator"
            android:id="@+id/custom_tab_text"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/autour_one"
            android:gravity="center"
            android:textSize="10sp"

            />

</RelativeLayout>